{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "indent": [
            1,
            "tab"
        ],
        "quotes": [
            1,
            "single"
        ],
        "semi": [
            1,
            "always",
            {
                "omitLastInOneLineBlock": true
            }
        ],
        "curly": 1,
        "brace-style": [
            1,
            "1tbs"
        ],
        "camelcase": [
            1,
            {
                "properties": "always"
            }
        ],
        "comma-spacing": [
            1,
            {
                "before": false,
                "after": true
            }
        ],
        "comma-style": [
            1,
            "last"
        ],
        "key-spacing": [
            1,
            {
                "mode": "strict",
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "keyword-spacing": 1,
        "block-spacing": 1,
        "array-bracket-spacing": [
            1,
            "always"
        ],
        "object-curly-spacing": [
            1,
            "always"
        ],
        "computed-property-spacing": [
            1,
            "always"
        ],
        "generator-star-spacing": [
            1,
            "after"
        ],
        "yield-star-spacing": [
            1,
            "after"
        ],
        "space-infix-ops": 1,
        "space-unary-ops": 1,
        "spaced-comment": [
            1,
            "always"
        ],
        "arrow-spacing": [
            1,
            {
                "before": true,
                "after": true
            }
        ],
        "arrow-parens": [
            1,
            "always"
        ],
        "arrow-body-style": [
            1,
            "always"
        ],
        "no-multiple-empty-lines": [
            1,
            {
                "max": 1
            }
        ],
        "valid-jsdoc": 1,
        "no-implicit-coercion": [
            1,
            {
                "allow": [
                    "!!"
                ]
            }
        ],
        "no-native-reassign": 1,
        "wrap-iife": [
            1,
            "outside"
        ],
        "yoda": [
            1,
            "never"
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "local",
                "args": "after-used",
                "ignoreRestSiblings": false
            }
        ],
        "prefer-arrow-callback": 1,
        "prefer-const": 1,
        "no-var": 1,
        "prefer-template": 1,
        "prefer-rest-params": 1,
        "prefer-spread": 1,
        "object-shorthand": [
            1,
            "always"
        ],
        "no-array-constructor": 1,
        "no-new-object": 1,
        "new-cap": 1,
        "new-parens": 1,
        "no-lonely-if": 1,
        "no-use-before-define": 1,
        "no-with": 1,
        "eqeqeq": [
            1,
            "smart"
        ]
    }
}